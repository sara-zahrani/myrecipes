<%= render 'shared/page_title', title: "Create a New Recipe" %>

<% if @recipe.errors.any? %>
  <%= pluralize(@recipe.errors.count, "error") %>
  prohibited this Recipe <%= @recipe.class %> from being saved:
  <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Recipe", autofocus: true %>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :description %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :description, class: "form-control", placeholder: "write here", autofocus: true %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary" %>

        </div>

      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      [<%= link_to "Cancel request and return to recipes listing", recipes_path %>]
    </div>
  </div>
</div>
